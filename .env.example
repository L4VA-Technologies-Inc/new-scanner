# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cardano_scanner

# JWT Configuration
JWT_SECRET=replace_with_secure_random_string
JWT_EXPIRATION=24h

# Blockfrost API Configuration
BLOCKFROST_API_KEY=your_blockfrost_api_key
BLOCKFROST_NETWORK=mainnet # or preprod, preview

# Logging Configuration
LOG_LEVEL=info # debug, info, warn, error

# Webhook Configuration
WEBHOOK_MAX_RETRIES=5
WEBHOOK_RETRY_DELAY=30000 # milliseconds

# Blockchain Monitoring Configuration
BLOCKCHAIN_POLLING_INTERVAL=30000 # milliseconds (30 seconds)
